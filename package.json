{
  "name": "solana-dapp",
  "scripts": {
    "anchor": "cd anchor && anchor",
    "anchor-build": "cd anchor && anchor build",
    "anchor-localnet": "cd anchor && anchor localnet",
    "anchor-test": "cd anchor && anchor test",
    "build": "vite build",
    "codama:js": "codama run js -c ./anchor/codama.js",
    "ci": "bun run build && bun run lint && bun run fmt:check",
    "dev": "vite",
    "fmt": "biome format --write .",
    "fmt:check": "biome format .",
    "lint": "biome lint .",
    "test:program": "cd anchor && anchor test",
    "typecheck": "bun tsc -p ./tsconfig.app.json --diagnostics && bun tsc -p ./tsconfig.backend.json --diagnostics",
    "preview": "vite preview",
    "setup": "bun run anchor keys sync && bun run codama:js"
  },
  "description": "React+Vite, Tailwind, gill (based on @solana/kit), Anchor Solanadapp example, Wallet UI",
  "keywords": [
    "anchor-solanadapp",
    "gill",
    "react",
    "solana-kit",
    "tailwind",
    "typescript",
    "vite",
    "wallet-ui"
  ],
  "version": "0.0.0",
  "private": true,
  "type": "module",
  "dependencies": {
    "@radix-ui/react-dialog": "^1.1.14",
    "@radix-ui/react-dropdown-menu": "^2.1.15",
    "@radix-ui/react-label": "^2.1.7",
    "@radix-ui/react-slot": "^1.2.3",
    "@solana/webcrypto-ed25519-polyfill": "^2.2.1",
    "@tailwindcss/vite": "^4.1.11",
    "@tanstack/react-query": "^5.82.0",
    "@wallet-ui/react": "1.1.0-canary-20250617152337",
    "@wallet-ui/tailwind": "1.1.0-canary-20250617152337",
    "chalk": "^5.4.1",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "gill": "0.10.2",
    "jotai": "^2.12.5",
    "lucide-react": "^0.525.0",
    "next-themes": "^0.4.6",
    "pino": "^9.7.0",
    "pino-pretty": "^13.0.0",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "react-error-boundary": "^6.0.0",
    "react-router": "^7.6.3",
    "sonner": "^2.0.6",
    "tailwind-merge": "^3.3.1",
    "tailwindcss": "^4.1.11",
    "tw-animate-css": "^1.3.5",
    "ws": "^8.18.3"
